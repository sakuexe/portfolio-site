<form action="" method="post" class="grid gap-2 px-2 py-4 w-full">
  <h4 class="font-bold">Contact Form</h4>
  <input type="text" name="name" placeholder="Name" />
  <span id="name_error" class="text-secondary-400"></span>
  <input type="text" name="email" placeholder="Email" />
  <span id="email_error" class="text-secondary-400"></span>
  <input type="text" name="topic" placeholder="Topic" />
  <span id="topic_error" class="text-secondary-400"></span>
  <textarea name="message" placeholder="Message"></textarea>
  <span id="message_error" class="text-secondary-400"></span>
  <hr class="my-2 opacity-25" />
  <div class="grid place-items-stretch gap-2">
    <button
      type="submit"
      class="bg-gradient-to-tr from-secondary-800 to-secondary-500 py-2 px-4 rounded-md
      motion-safe:transition-all hover:shadow-lg hover:shadow-secondary-800 hover:brightness-125"
      >Send Message</button
    >
    <button
      type="reset"
      class="border border-primary-500 py-2 px-4 rounded-md
      motion-safe:transition-all hover:shadow-lg hover:shadow-secondary-800 hover:border-secondary-400"
      >Reset</button
    >
  </div>
</form>

<style>
  form > input,
  form > textarea {
    @apply px-4 py-2 bg-transparent border border-primary-500 rounded-md;
  }

  form > input:focus,
  form > textarea:focus {
    @apply outline-none border-secondary-400 shadow-md shadow-secondary-800;
  }
</style>
