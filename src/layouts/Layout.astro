---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="bg-primary">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="text-primary-50 text-lg font-mono leading-relaxed min-w-[356px] mb-24"
  >
    <slot />
  </body>
</html>
<style is:global>
  /*
  Fonts. Stored locally
  https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face
  */
  @font-face {
    font-family: "Montserrat";
    src: url("/fonts/montserrat_variable.ttf") format("truetype");
    font-weight: 100 900;
    font-style: normal;
  }
  @font-face {
    font-family: "Fira Code";
    src: url("/fonts/firacode_variable.ttf") format("truetype");
    font-weight: 300 700;
    font-style: monospace;
  }

  html {
    background: #13151a;
  }

  h1,
  h2,
  h3,
  h4 {
    @apply font-sans;
  }

  header#hero {
    background: url("/images/floating-cubes.jpg") no-repeat center center;
    background-size: cover;
    /* parallax effect */
    /* background-attachment: fixed; */
  }

  #expertise {
    background: url("/images/code.png") no-repeat -1rem center;
    background-size: cover;
    /* parallax effect */
    background-attachment: fixed;
    position: relative;
    isolation: isolate;
    box-shadow: inset 0 0 4rem theme("colors.primary.DEFAULT");
  }

  /* Overlay - makes the background a little darker */
  #expertise::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    @apply bg-primary opacity-50;
  }

  a {
    position: relative;
  }

  a::before {
    /* Custom underline as an indicator of a link */
    content: "";
    position: absolute;
    bottom: -0.25rem;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 0.25rem;
    transition: width 0.3s;
    @apply bg-secondary;
  }

  a:hover::before {
    width: calc(100% + 1rem);
  }
</style>
